<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<!-- MyBatis3Simple MyBatis3-->
	<context id="DB2Tables" targetRuntime="MyBatis3">
		<!-- 生成bean忽略注释 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>
		<!-- 配置数据库连接 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/sonar" userId="root"
			password="123456">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 指定javaBean生成的位置 -->
		<javaModelGenerator targetPackage="com.alibaba.alisonar.domain"
			targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!--指定sql映射文件生成的位置 -->
		<sqlMapGenerator targetPackage="mapper" targetProject=".\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- 指定dao接口生成的位置，mapper接口 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.alibaba.alisonar.dao" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>


		<!-- table指定每个表的生成策略 -->
		<table tableName="auth_role" domainObjectName="AuthRole">
			<generatedKey column="id" sqlStatement="MySql" identity="true" />
			<columnOverride column="is_deleted"  jdbcType="INTEGER" javaType="java.lang.Integer"/>  
		</table>
		
		<table tableName="auth_user_role" domainObjectName="AuthUserRole">
			<generatedKey column="id" sqlStatement="MySql" identity="true" />
			<columnOverride column="is_deleted"  jdbcType="INTEGER" javaType="java.lang.Integer" />  
		</table>
		
		<table tableName="auth_permission" domainObjectName="AuthPermission">
			<generatedKey column="id" sqlStatement="MySql" identity="true" />
			<columnOverride column="is_deleted"  jdbcType="INTEGER" javaType="java.lang.Integer" />  
		</table>
		
		<table tableName="auth_role_permission" domainObjectName="AuthRolePermission">
			<generatedKey column="id" sqlStatement="MySql" identity="true" />
			<columnOverride column="is_deleted"  jdbcType="INTEGER" javaType="java.lang.Integer"/>  
		</table>

		
		
		<!-- <table tableName="%"
               enableCountByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               enableUpdateByExample="false">

            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
            <columnOverride column="address"  jdbcType="VARCHAR" />
            <columnOverride column="is_deleted"  jdbcType="INTEGER" />  
        </table> -->
	</context>
</generatorConfiguration>


