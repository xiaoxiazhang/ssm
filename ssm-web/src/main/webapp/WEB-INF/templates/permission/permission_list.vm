#set($layout = "layout/layout.vm")
<section class="content">
	<!-- 主代码-->
	<div class="box box-info">
		<div class="box-header with-border">
			<form class="form-horizontal" id="permissionForm">
				<div class="form-group">
					<label  class="col-sm-1 control-label">权限标识:</label>
					<div class="col-sm-3">
						<input type="text" class="form-control" name="permission" placeholder="请输入权限标识">
					</div>
					
					<label  class="col-sm-1 control-label">权限描述:</label>
					<div class="col-sm-3">
						<input type="type" class="form-control"  name="description" placeholder="请输入权限描述">
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-offset-1 col-sm-11">
						<button type="button" id="searchBtn" class=" btn btn-info">
							<span class="fa fa-search"></span>搜索
						</button>
						<button type="button" class="btn" data-toggle="modal"
							data-target="#addModal" data-backdrop="static">
							<span class="fa fa-plus"></span>添加
						</button>
					</div>
				</div>
			</form>
		</div>
		<div class="box-body">
			<table id="tableList" class="table table-striped"></table>
		</div>
		<!-- /.box-body -->
	</div>
</section>
#parse('permission/permission_add.vm')
#parse('permission/permission_edit.vm')
<script src="$rc.contextPath/assets/js/permission/permission_list.js"></script>

