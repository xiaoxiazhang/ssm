					var oCheck1=$(this).parents('.listbox').siblings().andSelf().find('.check2');
					$(this).parents('tr').find('.check1').prop("checked",trueorfalse(oCheck1))
					
				})
			}
			
			// 找同级元素的checked状态
			function trueorfalse(obj)
			{
				var bool = false;
				$(obj).each(function(){

					if($(this).prop("checked"))
